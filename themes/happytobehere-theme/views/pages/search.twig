{% import "components/macros.twig" as macros %}
{% extends "base.twig" %}
{% block page_title %}
    Cerca - 
{% endblock page_title %}
{% block search_page %}true{% endblock search_page %}
{% block sticky_title %}
    <h1 class="d-none d-xl-none"><a href="{{site.url}}">{{site.title}}</a></h1>
{% endblock sticky_title %}
{% block content %}
{% block title %}
<p class="archive-results-number">{{results_counter}}
    {% if results_counter == 1 %}
        risultato {% else %} risultati
    {% endif %}
</p>
{% endblock title %}
{#<script> let post_number = {{results_counter}}</script>#}
    {% if post is not empty %}
        <ul class="row row-cols-1 row-cols-lg-2 row-cols-xl-3 gx-4 gy-5" id="post-list-container">
            {{macros.posts_list(post)}}
            {{macros.insert_newsletter()}}
        </ul>
        {% if post|length >= 10 %}
            <a href="#" id="load-more-posts" class="d-flex align-items-center">
            <span id="load-more-posts-button">+</span><span>Carica altri post</span></a>
            <div class="d-none loader lds-ellipsis" id="more-posts-loader">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        {% endif %}
    {% else %}
        <p class="container">Nessun risultato trovato per la tua ricerca.</p>
    {% endif %}
{% endblock %}
